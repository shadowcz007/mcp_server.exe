{
    "name": "mcp_server.exe",
    "version": "1.0.0",
    "description": "MCP Server with backwards compatibility",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "tsx src/server.ts",
        "package-mac": "pkg . --targets node18-macos-x64 --output executables/mcp_server",
        "package-win": "pkg . --targets node18-win-x64 --output executables/mcp_server.exe",
        "test": "echo \"Error: no test specified\" && exit 1",
        "start-with-config": "node dist/server.js --mcp-js ./path/to/config.js",
        "test-custom-config": "node scripts/test-custom-config.js",
        "test-packaged-app": "node scripts/test-packaged-app.js"
    },
    "bin": "dist/server.js",
    "pkg": {
        "targets": [
            "node18-win-x64",
            "node18-macos-x64"
        ],
        "outputPath": "executables",
        "assets": [
            "dist/**/*",
            "src/**/*"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/shadowcz007/mcp_server.exe/issues"
    },
    "homepage": "https://github.com/shadowcz007/mcp_server.exe#readme",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.11.3",
        "@types/cors": "^2.8.18",
        "@types/uuid": "^10.0.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.0",
        "pkg": "^5.8.1",
        "tsx": "^4.19.4",
        "typescript": "^5.3.3"
    }
}